<!--
    Windows service definition for Sensu
-->
<service>
  <id>SensuAgentSvc</id>
  <name>Sensu Agent</name>
  <description>This service runs a Sensu agent.</description>
  <executable>C:\Program Files\Sensu\sensu-agent\bin\sensu-agent.exe</executable>
  <arguments>start</arguments>
  <logpath>C:\CHANGEME</logpath>
  <logmode>rotate</logmode>
</service>
